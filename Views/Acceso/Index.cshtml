@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br />
<br />
<br />
<br />
<div class="row">
    <h1 style="text-align:center">INICIA SESIÓN<br />(Sólo si eres técnico autorizado)</h1>
</div>
<br />
<br />
<div class="row">
    <form id="frm">
        <div class="col-lg-6 col-lg-offset-3">
            <strong> Usuario</strong>
            <input type="text" name="user" />
            <strong>Contraseña</strong>
            <input type="password" name="password" />
            <input  style="margin-top:-40px; margin-left:500px" type="submit" class="btn btn-success" value="Entrar" />
        </div>
    </form>
</div>



@section scripts
{
    <script>
    $(document).ready(function () {

        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Acceso/Enter")"
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {

                if (data == "1") {
                    document.location.href = "@Url.Content("~/")";
                } else {
                    alert(data)
                }

            })

        })

    })

    </script>
}